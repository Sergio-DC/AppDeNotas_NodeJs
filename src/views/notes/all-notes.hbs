<div class="card-columns">
  {{#each notes}}
  <!--<div class="col-md-3">-->
    <div class="card note_card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center title_note">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }} </p>
        <p class="note_estado">{{estado}}</p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm some_button">ELIMINAR</button>
        </form>
      </div>
    </div>
  <!--</div>-->
  {{else}}
  <div class="card mx-auto note_card">
    <div class="card-body">
      <h1>Bienvenido {{user.name}}</h1>
      <p clsss="lead">AÃºn no tienes ninguna nota registrada :(</p>
      <a href="/notes/add" class="btn btn-success btn-block some_button">Agregemos una :)</a>
    </div>
  </div>
  {{/each}}
</div>